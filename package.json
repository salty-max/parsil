{
  "name": "parsil",
  "version": "2.2.0",
  "description": "A parser combinators library written in Typescript",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salty-max/parsil.git"
  },
  "author": "Maxime Blanc <max@jellycat.fr>",
  "license": "MIT",
  "type": "module",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf dist",
    "build:esm": "bun build src/index.ts --outdir dist --sourcemap --minify --target=browser --format=esm",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.json",
    "build": "bun run clean && bun run build:esm && bun run build:types",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "bun test",
    "lint": "bunx eslint .",
    "lint:fix": "bunx eslint . --fix",
    "format": "bunx prettier . -w"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.5",
    "@types/node": "^24.2.1",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "bun-types": "^1.2.20",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20",
    "bun": ">=1.1"
  },
  "keywords": [
    "parser",
    "parser-combinator",
    "combinators",
    "parsing",
    "functional",
    "typescript",
    "esm",
    "utf8",
    "binary",
    "bit",
    "dataview",
    "grammar",
    "peg",
    "bnf"
  ]
}
